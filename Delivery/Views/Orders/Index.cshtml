@using Delivery.Models;

<h1>Orders</h1>

@if (@Model.Count == 0)
{
  <h3>No orders have been added yet!</h3>
}

@foreach (Order order in @Model["orders"])
{
  <li><a href='/orders/@order.Id'>@order.Title</a></li>
}
</ol>

<p><a href='/'>Back home</a></p>
<form action="/orders/delete" method="post">
  <button type="submit" name="button">Clear All Orders</button>
</form>