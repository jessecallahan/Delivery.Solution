@using Delivery.Models;

<h3>Here are all the orders for this vendor:</h3>

@if (@Model.Count == 0)
{
  <h3>No orders have been added yet!</h3>
}
<ol>
  @foreach (Order order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
  }
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new item</a></p>
<p><a href='/'>Return to Main Page</a></p>